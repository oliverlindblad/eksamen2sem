---
import Menu from '../components/Menu.astro';
import Logo from '../components/Logo.astro';
import Concertshelf from '../components/Concertshelf.astro';
import Layout from '../layouts/Layout.astro';
---

	<Layout title="Concerts">
        <Menu/>
        <video autoplay muted loop playsinline class="background-video">
        <source src="https://gpibpwcilnnywtjvpwql.supabase.co/storage/v1/object/public/lovehitshardcovers/canvasloop2.mp4?t=2024-12-14T15%3A39%3A34.610Z" type="video/mp4" />
    </video>

		<section class="songs">
        <Concertshelf/>
    </section>
	</Layout>

    <style>
    .background-video {
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 100%;
    height: 100%;
    object-fit: cover; 
    z-index: 1; 
    filter: brightness(20%); 
  }

    </style>
  

    