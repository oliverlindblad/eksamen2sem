<style>
/* Base Styles */
body {
    background-color: #1B1B1B;
    margin: 0;
    overflow-x: hidden;
}

img {
    width: 100%;
    height: auto;
}

.section1 {
    display: grid;
    grid-template-columns: 1fr 1fr;
    max-width: 100%;
    padding-left: 10rem;
    padding-right: 10rem;
    align-items: center;
    gap: 2rem; /* Adds spacing between grid items */
}

.kontakt {
    font-family: "Imbue", serif; /* Matches the font style in the image */
    color: #fff;
    font-size: 55px;
    text-align: center;
    font-weight: lighter;
}

.tekst_ny_sang {
    color: #fff;
    font-size: 22.5px;
    margin-left: 3rem;
    padding-top: 60px;
    padding-bottom: 100px;
}

/* Section 2 */
.section2 {
    margin-left: 20rem;
    margin-right: 20rem;
    padding-top: 1rem;
}

iframe {
    width: 100%; /* Ensures iframe adjusts to screen width */
    padding-top: 1rem;
}

/* SVG Styling */
.svg-container {
    display: flex;
    gap: 80px;
    justify-content: center;
    padding-top: 1%;
    padding-bottom: 3%;
    z-index: 30;
}

.svg {
    background: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    padding: 1.5vw; /* Adjust padding relative to screen width */
    width: 6vw; /* Set width relative to viewport width */
    height: 6vw; /* Maintain square shape */
    transition: background 0.3s;
    display: flex; /* Align content (e.g., SVG icon) inside */
    justify-content: center;
    align-items: center;
    z-index: 30;
    max-width: 60px; /* Limit size on larger screens */
    max-height: 60px;
}

.svg img {
    width: 100%; /* Ensure SVG or image scales properly */
    height: 100%;
}

.svg:hover {
    background: rgba(255, 255, 255, 0.3);
    cursor: pointer;
}

/* Responsive Design */

/* Tablets (max-width: 1024px) */
@media screen and (max-width: 1024px) {
    .section1 {
        padding-left: 5rem;
        padding-right: 5rem;
        grid-template-columns: 1fr;
    }

    .kontakt {
        font-size: 40px; 
    }

    .tekst_ny_sang {
        font-size: 18px;
        margin-left: 1rem;
        padding-top: 40px;
        padding-bottom: 60px;
    }

    .section2 {
        margin-left: 10rem;
        margin-right: 10rem;
    }
    
}

/* Mobile Devices (max-width: 768px) */
@media screen and (max-width: 768px) {
    .section1 {
        padding-left: 2rem;
        padding-right: 2rem;
        grid-template-columns: 1fr; 
    }

    .kontakt {
        font-size: 30px; 
    }

    .tekst_ny_sang {
        font-size: 16px;
        margin-left: 5px;
        padding-top: 20px;
        padding-bottom: 40px;
    }

    .section2 {
        margin-left: 1rem;
        margin-right: 1rem;
    }
    .svg-container{
        gap: 25px;
    }
 .svg {
        width: 8vw; 
        height: 8vw;
        padding: 2vw;
        max-width: 20px; 
        max-height: 20px;
    }
}

/* Small Mobile Devices (max-width: 480px) */
@media screen and (max-width: 480px) {
    .kontakt {
        font-size: 24px;
    }

    .tekst_ny_sang {
        font-size: 14px;
        padding-top: 10px;
        padding-bottom: 20px;
    }

    iframe {
        height: 200px; 
    }
}
</style>